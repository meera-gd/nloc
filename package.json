{
	"name": "NLOC",
	"version": "0.0.0",
	"description": "A prototype for programming ideas",
	"author": "Meera <meera.s.gd@gmail.com>",
	"main": "./bin/main.js",
	"repository": "https://github.com/meera-gd/nloc",

	"scripts": {
		"build": "npm run pack && build",
		"build:dir": "npm run pack && build --dir",
		"dev": "node scripts/runner.js",
		"e2e": "npm run pack && mocha test/e2e",
		"lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src test",
		"lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src test",
		"pack": "npm run pack:main && npm run pack:renderer",
		"pack:main": "cross-env NODE_ENV=production webpack -p --progress --colors --config scripts/main.webpack.js",
		"pack:renderer": "cross-env NODE_ENV=production webpack -p --progress --colors --config scripts/renderer.webpack.js",
		"postinstall": "npm run lint:fix",
		"test": "npm run unit && npm run e2e",
		"unit": "karma start test/unit/karma.conf.js"
	},

	"dependencies": {
		"babel-runtime": "^6.23.0",
		"vue": "^2.1.10",
		"vue-router": "^2.1.2",
		"vuex": "^2.1.1"
	},

	"devDependencies": {
		"babel-core": "^6.8.0",
		"babel-eslint": "^7.0.0",
		"babel-loader": "^6.2.4",
		"babel-plugin-istanbul": "^3.1.2",
		"babel-plugin-transform-runtime": "^6.8.0",
		"babel-preset-es2015": "^6.6.0",
		"babel-preset-stage-0": "^6.5.0",
		"babel-register": "^6.18.0",
		"chai": "^3.5.0",
		"cross-env": "^3.1.4",
		"css-loader": "^0.26.1",
		"del": "^2.2.1",
		"devtron": "^1.1.0",
		"electron": "~1.6.6",
		"electron-builder": "^11.4.4",
		"electron-debug": "^1.1.0",
		"electron-devtools-installer": "^2.0.1",
		"electron-rebuild": "^1.1.3",
		"eslint": "^3.13.1",
		"eslint-config-airbnb-base": "^3.0.1",
		"eslint-friendly-formatter": "^2.0.5",
		"eslint-loader": "^1.3.0",
		"eslint-plugin-html": "^2.0.0",
		"eslint-plugin-import": "^1.8.1",
		"extract-text-webpack-plugin": "^2.0.0-beta.4",
		"file-loader": "^0.9.0",
		"html-webpack-plugin": "^2.16.1",
		"json-loader": "^0.5.4",
		"inject-loader": "^2.0.1",
		"karma": "^1.3.0",
		"karma-chai": "^0.1.0",
		"karma-coverage": "^1.1.1",
		"karma-electron": "^5.1.1",
		"karma-mocha": "^1.2.0",
		"karma-sourcemap-loader": "^0.3.7",
		"karma-spec-reporter": "0.0.26",
		"karma-webpack": "^2.0.1",
		"mocha": "^3.0.2",
		"require-dir": "^0.3.0",
		"spectron": "^3.4.0",
		"style-loader": "^0.13.1",
		"tree-kill": "^1.1.0",
		"url-loader": "^0.5.7",
		"vue-hot-reload-api": "^2.0.7",
		"vue-html-loader": "^1.2.2",
		"vue-loader": "^10.0.2",
		"vue-style-loader": "^1.0.0",
		"vue-template-compiler": "^2.3.0",
		"webpack": "^2.2.1",
		"webpack-dev-server": "^2.3.0",
		"webpack-merge": "^2.4.0"
	},
	
	"build": {
		"productName": "NLOC",
		"files": [
			"bin/",
			"node_modules/",
			"package.json"
		],
		"dmg": {
			"contents": [
				{
					"x": 410,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 150,
					"type": "file"
				}
			]
		},
		"mac": {
			"icon": "icons/icon.icns"
		},
		"linux": {
			"target": [
				"AppImage"
			]
		},
		"win": {
			"icon": "icons/icon.ico"
		}
	}
}
